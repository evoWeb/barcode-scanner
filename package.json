{
  "name": "evoweb-barcode-scanner",
  "description": "JavaScript Barcode Scanner with Webcam",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "author": {
    "name": "Sebastian Fischer",
    "email": "javascript@evoweb.de",
    "url": "http://www.evoweb.de/"
  },
  "keywords": [
    "barcode",
    "reader",
    "Code128",
    "Code93",
    "Code39",
    "EAN-13"
  ],
  "bugs": {
    "url": "https://github.com/evoweb/barcode-scanner/issues"
  },
  "homepage": "https://github.com/evoweb/barcode-scanner",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/evoweb/barcode-scanner.git"
  },
  "dependencies": {
    "jquery": "*",
    "requirejs": "*"
  },
  "devDependencies": {
    "node-sass": "latest"
  },
  "scripts": {
    "build:css": "node-sass --output-style expanded --source-comments true Resources/Sass/main.scss Resources/Css/main.css",
    "build:css:dev": "node-sass --output-style compressed  Resources/Sass/main.scss Resources/Css/main.min.css",

    "build": "npm run build:css && npm run build:css:dev"
  }
}
